<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/searchcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/search_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:hint="@string/net_search"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_net_vedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchcon"
        android:text="@string/start_vedio"/>

    <ListView
        android:id="@+id/list_net"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_net_vedio"></ListView>

    
</RelativeLayout>